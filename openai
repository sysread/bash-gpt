  local assistant

  if wants-help "$@" || [ -z "$*" ]; then
    cmd-usage 'delete-assistant' 'ASSISTANT'
  fi

  assistant=$(get-config --assistant "$@") || die "delete-assistant: expected --assistant"
  request "$API_BASE_URI/assistants/$assistant" -X DELETE
}

